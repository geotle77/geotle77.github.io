.container {
  padding: 40rpx;
  background-color: #ffffff;
}

.post-header {
  margin-bottom: 50rpx;
  border-bottom: 1px solid #f0f0f0;
  padding-bottom: 30rpx;
}

.post-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  line-height: 1.4;
}

.post-date {
  font-size: 26rpx;
  color: #999;
}

.post-content {
  font-size: 32rpx;
  line-height: 1.8;
  color: #444;
  text-align: justify;
}

